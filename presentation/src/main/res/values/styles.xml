<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Setlists"/>

    <style name="Setlists.Text" parent="Setlists"/>

    <style name="Setlists.Text.List.Title" parent="Setlists.Text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Setlists.Text.List.SongsSummary" parent="Setlists.Text">
        <item name="android:textColor">@color/colorSongsSummary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Setlists.Text.List.Month" parent="Setlists.Text">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Setlists.Text.List.Day" parent="Setlists.Text">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Setlists.Text.List.Year" parent="Setlists.Text">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
